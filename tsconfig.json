{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "rootDir": ".",
    "moduleResolution": "nodenext",
    "baseUrl": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "public"
  ]
}
